// Import your fonts using font-face declarations inside this file.
// Make sure to set the font-weight / font-style correctly for each one that you include.

@font-face {
  font-family: 'TT Norms';
  src: url('{{ "TTNorms-Medium.eot" | asset_url }}?#iefix');
  src: url('{{ "TTNorms-Medium.eot" | asset_url }}?#iefix') format('embedded-opentype'),
       url('{{ "TTNorms-Medium.otf" | asset_url }}') format('opentype'),
       url('{{ "TTNorms-Medium.woff" | asset_url }}') format('woff'),
       url('{{ "TTNorms-Medium.ttf" | asset_url }}') format('truetype'),
       url('{{ "TTNorms-Medium.svg" | asset_url }}#TTNorms-Medium') format('svg');
  font-weight: $font-weight-normal;
  font-style: normal;
}

