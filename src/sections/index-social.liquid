<div data-section-id="{{ section.id }}" data-section-type="social" data-access-token="{{ section.settings.instagram_access_token }}">
  <div class="container">
    <div class="content-grid">
      <div class="content-grid__item">
        <h5>Facebook</h5>
        <div class="fb-page" data-href="https://www.facebook.com/adamcarolla" data-tabs="timeline" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="false"><blockquote cite="https://www.facebook.com/adamcarolla" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/adamcarolla">Adam Carolla</a></blockquote></div>
      </div>
      {% if section.settings.instagram_access_token != blank %}
        <div class="content-grid__item">
          <h5>Instagram</h5>
          <div class="content-grid content-grid--instagram" data-instagram-feed-target></div>
          {% if settings.social_instagram_link != blank %}
            <div class="content-footer">
              <a href="{{ settings.social_instagram_link }}">See more on Instagram</a>
            </div>
          {% endif %}
        </div>
      {% endif %}
      <div class="content-grid__item">
        <h5>Twitter</h5>
        <div style="max-height: 500px; overflow: scroll">
          <a class="twitter-timeline" data-theme="dark" href="https://twitter.com/adamcarolla?ref_src=twsrc%5Etfw">Tweets by adamcarolla</a>
          <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
        </div>
      </div>
    </div>
  </div>

  {% raw %}
  <script type="text/x-handlebars-template" data-instagram-media-template>
    <div class="content-grid__item">
      <a href="{{ url }}" title="{{ caption }}" target="_blank">
        <div class="frame frame--1x1" style="background-image:url({{ src }})"></div>
      </a>
    </div>
  </script>
  {% endraw %}

</div>

{% schema %}
  {
    "name": "Social",
    "settings": [
      {
        "id": "instagram_access_token",
        "label": "Instagram Access Token",
        "type": "text",
        "info": "See: instagram.com/developer/authentication"
      }
    ],
    "presets": [{
      "name": "Social",
      "category": "Misc",
      "settings": {}
    }]
  }
{% endschema %}